<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">lookbook_manager.lookbook_data_source</item>
            <item name="deps" xsi:type="string">lookbook_manager.lookbook_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Manage Lookbook</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
            <item name="navContainerName" xsi:type="string">left</item>
        </item>
    </argument>
    <dataSource name="lookbook_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">lookbook_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="grid/banner/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="group_grid">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Group</item>
            </item>
        </argument>
        <container name="group_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                </item>
            </argument>
            <container name="group_grid_container" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                <item name="config" xsi:type="array">
                    <item name="dataSource" xsi:type="string">lookbook_data_source</item>
                    <item name="exports" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                    </item>
                </item>
                <item name="children" xsi:type="array">
                    <container name="group_columns" xsi:type="array">
                        <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/columnSet</item>
                        <item name="config" xsi:type="array">
                            <item name="addField" xsi:type="boolean">false</item>
                            <item name="exports" xsi:type="array">
                                <item name="disabled" xsi:type="boolean">false</item>
                            </item>
                            <item name="editorConfig" xsi:type="array">
                                <item name="selectProvider" xsi:type="string">group_grid.group_grid.group_columns.ids</item>
                                <item name="enabled" xsi:type="boolean">true</item>
                                <item name="indexField" xsi:type="string">entity_id</item>
                                <item name="clientConfig" xsi:type="array">
                                    <item name="saveUrl" xsi:type="url" path="mui/index/render"/>
                                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                                </item>
                            </item>
                            <item name="resizeEnabled" xsi:type="boolean">true</item>
                            <item name="indexField" xsi:type="string">entity_id</item>
                        </item>
                        <item name="children" xsi:type="array">
                            <column name="group" sortOrder="10" xsi:type="string">group</column>
                            <column name="entity_id" sortOrder="20" xsi:type="string">entity_id</column>
                        </item>
                    </container>
                </item>
            </container>
        </container>
    </fieldset>
    <fieldset name="lookbook_grid">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Lookbook Images</item>
            </item>
        </argument>
        <container name="lookbook_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                </item>
            </argument>
            <container name="lookbook_grid_container" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                <item name="config" xsi:type="array">
                    <item name="dataSource" xsi:type="string">lookbook_data_source</item>
                    <item name="exports" xsi:type="array">
                        <item name="enabled" xsi:type="boolean">true</item>
                    </item>
                </item>
                <item name="children" xsi:type="array">
                    <container name="lookbook_columns" xsi:type="array">
                        <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/columnSet</item>
                        <item name="config" xsi:type="array">
                            <item name="addField" xsi:type="boolean">false</item>
                            <item name="exports" xsi:type="array">
                                <item name="disabled" xsi:type="boolean">false</item>
                            </item>
                            <item name="editorConfig" xsi:type="array">
                                <item name="selectProvider" xsi:type="string">lookbook_grid.lookbook_grid.lookbook_columns.ids</item>
                                <item name="enabled" xsi:type="boolean">true</item>
                                <item name="indexField" xsi:type="string">entity_id</item>
                                <item name="clientConfig" xsi:type="array">
                                    <item name="saveUrl" xsi:type="url" path="mui/index/render"/>
                                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                                </item>
                            </item>
                            <item name="resizeEnabled" xsi:type="boolean">true</item>
                            <item name="indexField" xsi:type="string">entity_id</item>
                        </item>
                        <item name="children" xsi:type="array">
                            <column name="entity_id" sortOrder="10" xsi:type="string">entity_id</column>
                            <column name="name" sortOrder="20" xsi:type="string">name</column>
                            <column name="button_label" sortOrder="30" xsi:type="string">button_label</column>
                            <column name="button_link" sortOrder="40" xsi:type="string">button_link</column>
                            <column name="width" sortOrder="50" xsi:type="string">width</column>
                            <column name="height" sortOrder="60" xsi:type="string">height</column>
                        </item>
                    </container>
                </item>
            </container>
        </container>
    </fieldset>
</form>
